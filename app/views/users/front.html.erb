<% provide(:title, @user.name) %>
      <div class="span12">
        <div class="row">
          <% if @user.posts.any? %>
            <h1>My Posts</h1>
            <span><%= @user.posts.count %></span>
            <ol class="posts">
              <%= render @posts %>
            </ol>
            <%= will_paginate @posts %>
          <% end %> 
        </div><!--/row-->

